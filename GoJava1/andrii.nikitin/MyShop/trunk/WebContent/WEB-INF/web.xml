<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0"
 xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
 <description>This application allows to buy goods and control the shop's activity.</description>
 <display-name>MyShop</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
 <servlet>
  <servlet-name>category-printer</servlet-name>
  <servlet-class>ua.com.goit.gojava.andriidnikitin.servlets.CategoryPrinter</servlet-class>
  <enabled>true</enabled>
 </servlet>
  <servlet>
  <servlet-name>good-printer</servlet-name>
  <servlet-class>ua.com.goit.gojava.andriidnikitin.servlets.GoodPrinter</servlet-class>
  <enabled>true</enabled>
 </servlet>
 <servlet-mapping>
  <servlet-name>category-printer</servlet-name>
  <url-pattern>/print-categories</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>good-printer</servlet-name>
  <url-pattern>/print-goods</url-pattern>
 </servlet-mapping>
</web-app>