<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>HackIt2</display-name>
  <servlet>
    <display-name>PathInformer</display-name>
    <servlet-name>PathInformer</servlet-name>
    <servlet-class>ua.com.goit.gojava1.lslayer.hackit2.PathInformer</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ActorMaintaner</servlet-name>
    <servlet-class>ua.com.goit.gojava1.lslayer.hackit2.ui.ActorMaintainer</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminZone</servlet-name>
    <servlet-class>ua.com.goit.gojava1.lslayer.hackit2.ui.AdminZone</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PathInformer</servlet-name>
    <url-pattern>/informer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ActorMaintaner</servlet-name>
    <url-pattern>/actors</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PathInformer</servlet-name>
    <url-pattern>/actors/edit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminZone</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>postgreSQL Datasource</description>
    <res-ref-name>jdbc/postgresDS</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>