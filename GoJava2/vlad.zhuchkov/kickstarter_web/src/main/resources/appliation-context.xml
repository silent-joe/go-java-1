<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:component-scan base-package="ua.com.goit.gojava.kickstarter" />

	<context:annotation-config />

	<bean id="dataSource" class="org.postgresql.ds.PGPoolingDataSource">
		<property name="dataSourceName" value="data source" />
		<property name="serverName" value="localhost" />
		<property name="databaseName" value="kickstarter" />
		<property name="user" value="postgres" />
		<property name="password" value="admin" />
		<property name="maxConnections" value = "5" />
	</bean>

</beans>