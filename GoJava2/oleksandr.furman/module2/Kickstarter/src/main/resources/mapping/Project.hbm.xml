<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ua.com.goit.gojava.alexfurman.kickstarter.entity">
	<class name="Project" table="Project">
		<id name="id" column="ID">
			<generator class="native"/>
		</id>
		<property name="name" column="NAME" />
		<property name="description" column="DESCRIPTION" />
		<property name="goal" column="GOAL" />
		<property name="pledged" column="PLEDGED" />
		<property name="daysLeft" column="DAYS_LEFT" />
		<property name="history" column="HISTORY" />
		<property name="linksToVideo" column="LINKS_TO_VIDEO" />
		<property name="questionAnswers" column="QUESTION_ANSWERS	" />
		<property name="category" column="CATEGORY_ID" />
	</class>	
	 <query name="findProjectByCategoryID">
               <![CDATA[from Project pr where pr.category = :category]]>
    </query>
	
</hibernate-mapping>